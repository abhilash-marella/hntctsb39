	Customer cust4= new Customer(4, "Kunal", "male", "Delhi");
	Customer cust5= new Customer(5, "Sakshi", "female", "Delhi");

	
	2, delivered, 19-May-2022, 24-May-2022, [204], 4
	3, delivered, 31-Jul-2021, 04-Aug-2021, [210, 215], 2
	4, pending, 29-Oct-2022, -, (134, 157, [204, 215], 3
	5, pending, 30-Oct-2021, -, (134), 5
	
	Order order1= new Order(1, delivered, 12-Nov-2021, 14-Nov-2021, Arrays.asList(null), 1);
