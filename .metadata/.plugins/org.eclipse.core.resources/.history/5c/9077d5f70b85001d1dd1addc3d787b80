	Item item4= new Item(210, "iPhone", 45000, "Mobiles");
	Item item5= new Item(215, "Shirt", 1500, "Shirts");
	
	
	
	
	
	
	Customer cust1= new Customer(1, "Tom", "male", "Bangalore");
	Customer cust2= new Customer(2, "Mike", "male", "Delhi");
